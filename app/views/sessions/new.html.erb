<div class="col-md-12">
  <h1>Sign in</h1>
  <% if @error_message %>
    <div><%= @error_message %></div>
  <% end %>

  <%= form_tag sessions_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email], required: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, required: true, class: "form-control" %>
    </div>
    <div>
      <%= submit_tag "Sign in", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
